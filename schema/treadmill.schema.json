{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "treadmill.schema.json",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "id",
    "make",
    "model",
    "driver",
    "source",
    "features",
    "sharedNotes"
  ],
  "properties": {
    "id": { "type": "string" },
    "make": { "type": "string" },
    "model": { "type": "string" },
    "driver": {
      "type": "string",
      "enum": ["Kingsmith Walking Pad", "Generic"]
    },

    "weight": {
      "type": "object",
      "required": ["maxUser", "unit"],
      "additionalProperties": false,
      "properties": {
        "maxUser": { "type": "number", "exclusiveMinimum": 0 },
        "unit": { "type": "string", "enum": ["kg", "lb"] }
      }
    },

    "source": {
      "type": "object",
      "required": ["name", "url"],
      "additionalProperties": false,
      "properties": {
        "name": { "type": "string" },
        "url": { "type": "string", "format": "uri" }
      }
    },

    "features": {
      "$ref": "features.schema.json"
    },

    "vendorApps": {
      "type": "array",
      "description": "Manufacturer companion apps",
      "items": {
        "type": "object",
        "required": ["name", "supported"],
        "additionalProperties": false,
        "properties": {
          "name": {
            "type": "string",
            "enum": ["URevo", "Kinomap", "Zwift", "KSFit"],
            "description": "Vendor app name"
          },
          "supported": {
            "type": "boolean",
            "description": "Whether this treadmill works with the vendor app"
          },
          "notes": {
            "type": "array",
            "items": { "type": "string" },
            "description": "Additional notes about vendor app compatibility"
          }
        }
      }
    },

    "sharedNotes": {
      "type": "array",
      "items": { "type": "string" }
    }
  }
}
